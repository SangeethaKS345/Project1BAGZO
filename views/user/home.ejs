  <!-- Main script with all handlers -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
 async function addToCart(productId) {
    try {
        console.log('Adding to cart:', productId);

        const response = await fetch('/add-to-cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId, quantity: 1 })
        });

        console.log('Response received:', response);

        // Check if the response is JSON
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
            const textResponse = await response.text();
            console.error('Unexpected response:', textResponse);
            Swal.fire('Error', 'Unexpected response from the server.', 'error');
            return;
        }

        const result = await response.json();
        console.log('Response JSON:', result);

        if (result.success) {
            Swal.fire('Success', 'Product added to cart successfully!', 'success');
        } else {
            Swal.fire('Error', result.message || 'Failed to add product to cart.', 'error');
        }
    } catch (error) {
        Swal.fire('Error', 'Something went wrong.', 'error');
        console.error('Error:', error);
    }
}

    async function toggleWishlist(productId, button) {
        try {
            const response = await fetch(`/wishlist/toggle/${productId}`, {
                method: 'POST'
            });

            const result = await response.json();

            if (result.success) {
                Swal.fire('Success', result.message, 'success');
                button.classList.toggle('active');
            } else {
                Swal.fire('Error', result.message || 'Failed to update wishlist.', 'error');
            }
        } catch (error) {
            Swal.fire('Error', 'Something went wrong.', 'error');
            console.error('Error:', error);
        }
    }
</script>

