  <%- include('../../views/partials/user/header') %>
  <style>
    /* Modal Overlay */
#modalOverlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6); /* Slightly darker overlay */
  z-index: 999;
  transition: opacity 0.3s ease;
}

/* Modal Container */
#orderDetailsModal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
  width: 700px;
  max-width: 90%;
  background: #ffffff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  max-height: 80vh;
  overflow-y: auto;
  transition: all 0.3s ease;
}

/* Modal Content */
.modal-content {
  font-family: 'Arial', sans-serif;
}

/* Modal Header */
.modal-content h3 {
  font-size: 1.5rem;
  color: #333;
  margin-bottom: 20px;
  border-bottom: 2px solid #FF4B2B; /* Accent color */
  padding-bottom: 10px;
}

/* Section Headers */
.order-info-section h4,
.customer-info-section h4,
.shipping-info-section h4,
.order-items-section h4 {
  font-size: 1.2rem;
  color: #FF4B2B; /* Accent color */
  margin: 20px 0 10px;
  font-weight: 600;
}

/* Paragraphs */
.order-info-section p,
.customer-info-section p,
.shipping-info-section p {
  font-size: 1rem;
  color: #555;
  margin: 8px 0;
}

.order-info-section p strong,
.customer-info-section p strong,
.shipping-info-section p strong {
  color: #333;
  font-weight: 500;
  min-width: 120px;
  display: inline-block;
}

/* Order Items Table */
.order-items-section table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 10px;
}

.order-items-section th,
.order-items-section td {
  padding: 12px;
  text-align: left;
  border-bottom: 1px solid #eee;
}

.order-items-section th {
  background-color: #f8f8f8;
  color: #333;
  font-weight: 600;
  font-size: 0.95rem;
}

.order-items-section td {
  color: #666;
  font-size: 0.9rem;
}

.order-items-section tr:hover {
  background-color: #f5f5f5;
}

/* Buttons */
.modal-content button {
  padding: 10px 20px;
  font-size: 1rem;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

#closeOrderModal {
  background-color: #ccc;
  color: #333;
}

#closeOrderModal:hover {
  background-color: #bbb;
}

#repayButton {
  background-color: #FF4B2B; /* Accent color */
  color: #fff;
  margin-right: 10px;
}

#repayButton:hover {
  background-color: #e43a1a;
}

/* Icons in Buttons */
.modal-content button i {
  margin-right: 5px;
}

/* Scrollbar Styling */
#orderDetailsModal::-webkit-scrollbar {
  width: 8px;
}

#orderDetailsModal::-webkit-scrollbar-track {
  background: #f1f1f1;
}

#orderDetailsModal::-webkit-scrollbar-thumb {
  background: #FF4B2B;
  border-radius: 4px;
}

#orderDetailsModal::-webkit-scrollbar-thumb:hover {
  background: #e43a1a;
}

/* Responsive Design */
@media (max-width: 768px) {
  #orderDetailsModal {
    width: 95%;
    padding: 15px;
  }

  .modal-content h3 {
    font-size: 1.3rem;
  }

  .order-info-section h4,
  .customer-info-section h4,
  .shipping-info-section h4,
  .order-items-section h4 {
    font-size: 1.1rem;
  }

  .order-items-section th,
  .order-items-section td {
    padding: 8px;
    font-size: 0.85rem;
  }

  .modal-content button {
    padding: 8px 15px;
    font-size: 0.9rem;
  }
}

@media (max-width: 480px) {
  .order-info-section p strong,
  .customer-info-section p strong,
  .shipping-info-section p strong {
    display: block;
    margin-bottom: 5px;
  }

  .order-items-section table {
    font-size: 0.8rem;
  }

  .order-items-section th,
  .order-items-section td {
    padding: 6px;
  }
}
  </style>
