<%- include('../../views/partials/user/header') %>
<link rel="stylesheet" href="/css/orderPlaced.css" type="text/css">
<div class="order-success-container">
    <div class="success-checkmark">
        <div class="check-icon">
            <span class="icon-line line-tip"></span>
            <span class="icon-line line-long"></span>
            <div class="icon-circle"></div>
            <div class="icon-fix"></div>
        </div>
    </div>
    
    <div class="success-content">
        <h2>Thank You for Your Order!</h2>
        <p class="brand-message">Your order has been successfully placed with <span class="brand-name">BAGZO</span></p>
        
        <div class="order-details">
            <h3>Order Summary</h3>
            <% if (order) { %>
              <div class="detail-row">
                <span class="detail-label">Order ID:</span>
                <span class="detail-value"><%= order.orderId %></span>
              </div>
              <div class="detail-row">
                <span class="detail-label">Amount:</span>
                <span class="detail-value price">â‚¹<%= order.totalAmount %></span>
              </div>
              <div class="detail-row">
                <span class="detail-label">Date:</span>
                <span class="detail-value"><%= order.placedAt %></span>
              </div>
              <div class="detail-row">
                <span class="detail-label">Status:</span>
                <span class="detail-value status">Confirmed</span>
              </div>
            <% } else { %>
              <p><%= message || "No order details available." %></p>
            <% } %>
          </div>
        
        <div class="confirmation-message">
            <i class="fas fa-shipping-fast"></i>
            <p>Your order will be processed and shipped soon. You'll receive updates via email.</p>
        </div>
    </div>
    
    <div class="action-buttons">
        <a href="/" class="order-btn home-btn">
            <i class="fas fa-home"></i>
            Continue Shopping
        </a>
        <a href="/my-orders" class="order-btn orders-btn">
            <i class="fas fa-box"></i>
            Track Orders
        </a>
    </div>
</div>

<%- include('../../views/partials/user/footer') %>