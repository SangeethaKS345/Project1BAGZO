    <div class="cart-container">
        <div class="cart-header">
            <div class="container">
                <h1>Shopping Cart</h1>
                <div class="breadcrumb">
                    <a href="/">Home</a> > <a href="/shop">Shop</a> > <span>Cart</span>
                </div>
            </div>
        </div>
    
        <div class="container">
            <div class="cart-content">
                <div class="cart-items">
                    <% if (data.length > 0) { %>
                        <% var x=0 %>
                        <% for (let i=0; i < data.length; i++) { %>
                            <div class="cart-item">
                                <div class="item-image">
                                    <img src="/uploads/re-image/<%= data[i].productDetails[0].productImage[0] %>" alt="<%= data[i].productDetails[0].productName %>">
                                </div>
                                <div class="item-details">
                                    <h3 class="item-name">
                                        <%= data[i].productDetails[0].productName %>
                                        <% if (data[i].productDetails[0].isOnSale) { %>
                                            <span class="product-badge">Sale</span>
                                        <% } %>
                                    </h3>
                                    <p class="item-meta"><%= data[i].productDetails[0].category %> | <%= data[i].productDetails[0].brand %></p>
                                    <div class="item-price">
                                        <span class="price-label">Price:</span>
                                        <span class="price-value">₹<span id="price<%= data[i].productDetails[0].id %>"><%= data[i].productDetails[0].salePrice %></span></span>
                                    </div>
                                </div>
                                <div class="item-quantity">
                                    <div class="quantity-wrapper">
                                        <button class="qty-btn minus" onclick="changeQuantity('<%= data[i].productDetails[0]._id %>', '<%= data[i].quantity %>', -1, '<%= data[i].productDetails[0].salePrice %>', '<%= data[i].productDetails[0].id %>', '<%= data[i].productDetails[0].quantity%>')">−</button>
                                        <input type="text" id="cartProductQuantity<%= data[i].productDetails[0].id %>" value="<%= data[i].quantity %>" readonly>
                                        <button class="qty-btn plus" onclick="changeQuantity('<%= data[i].productDetails[0]._id %>', '<%= data[i].quantity %>', 1, '<%= data[i].productDetails[0].salePrice %>', '<%= data[i].productDetails[0].id %>', '<%= data[i].productDetails[0].quantity%>')">+</button>
                                    </div>
                                </div>
                                <div class="item-subtotal">
                                    <span class="subtotal-label">Subtotal:</span>
                                    <span class="subtotal-value">₹<span id="subTotal<%= data[i].productDetails[0].id %>"><%= data[i].productDetails[0].salePrice * data[i].quantity %></span></span>
                                </div>
                                <div class="item-remove">
                                    <button class="remove-btn" onclick="confirmRemove('<%= data[i].productDetails[0]._id %>')">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path fill="none" d="M0 0h24v24H0z"/><path d="M17 6h5v2h-2v13a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V8H2V6h5V3a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1v3zm1 2H6v12h12V8zm-9 3h2v6H9v-6zm4 0h2v6h-2v-6zM9 4v2h6V4H9z"/></svg>
                                    </button>
                                </div>
                            </div>
                            <% x += data[i].productDetails[0].salePrice * data[i].quantity %>
                        <% } %>
                    <% } else { %>
                        <div class="empty-cart">
                            <div class="empty-cart-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="64" height="64"><path fill="none" d="M0 0h24v24H0z"/><path d="M4 16V4H2V2h3a1 1 0 0 1 1 1v12h12.438l2-8H8V5h13.72a1 1 0 0 1 .97 1.243l-2.5 10a1 1 0 0 1-.97.757H5a1 1 0 0 1-1-1zm2 7a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm12 0a2 2 0 1 1 0-4 2 2 0 0 1 0 4z"/></svg>
                            </div>
                            <h2>Your Cart is Empty</h2>
                            <p>Looks like you haven't added any products to your cart yet.</p>
                            <a href="/shop" class="shop-now-btn">Shop Now</a>
                        </div>
                    <% } %>
                    <input type="hidden" id="totalabc" value="<%= x %>">
                </div>
    
                <div class="cart-summary">
                    <div class="summary-card">
                        <h2 class="summary-title">Order Summary</h2>
                        <div class="summary-items">
                            <div class="summary-row">
                                <span>Subtotal</span>
                                <span>₹<span id="subtotal"><%= grandTotal %></span></span>
                            </div>
                            <div class="summary-row">
                                <span>Shipping</span>
                                <span class="free-shipping">FREE</span>
                            </div>
                            <div class="summary-row discount">
                                <span>Discount</span>
                                <span>₹0</span>
                            </div>
                        </div>
                        <div class="summary-total">
                            <span>Total</span>
                            <span>₹<span id="total"><%= grandTotal %></span></span>
                        </div>
                        <% if (data && data.length > 0) { %>
                            <a href="/checkout?userId=<%= user._id %>" class="checkout-btn">Proceed to Checkout</a>
                        <% } else { %>
                            <button disabled class="checkout-btn disabled">Proceed to Checkout</button>
                        <% } %>
                        <a href="/shop" class="continue-shopping">
                            <span>Continue Shopping</span>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16"><path fill="none" d="M0 0h24v24H0z"/><path d="M13.172 12l-4.95-4.95 1.414-1.414L16 12l-6.364 6.364-1.414-1.414z"/></svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
