    <script>

function changeQuantity(productId, currentQuantity, change, price, elementId, maxQuantity) {
    const newQuantity = parseInt(currentQuantity) + change;
    if (newQuantity < 1 || newQuantity > maxQuantity) {
        Swal.fire({
            icon: 'error',
            title: 'Invalid Quantity',
            text: `Quantity must be between 1 and ${maxQuantity}`,
        });
        return;
    }

    // Update quantity in the UI
    document.getElementById(`cartProductQuantity${elementId}`).value = newQuantity;

    // Update subtotal
    const newSubtotal = newQuantity * price;
    document.getElementById(`subTotal${elementId}`).innerText = newSubtotal;

    // Update total
    updateTotal();

    // Optionally, you can make an AJAX request to update the quantity in the backend
}

// Function to update the total price
function updateTotal() {
    let total = 0;
    const subtotals = document.querySelectorAll('.subtotal-value > span');
    subtotals.forEach(subtotal => {
        total += parseFloat(subtotal.innerText);
    });
    document.getElementById('total').innerText = total;
    document.getElementById('subtotal').innerText = total;
    document.getElementById('totalabc').value = total;
}

// Function to confirm removal of a product from the cart
function confirmRemove(productId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "Do you want to remove this item from the cart?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, remove it!',
        cancelButtonText: 'Cancel'
    }).then((result) => {
        if (result.isConfirmed) {
            // Remove the item from the UI
            document.querySelector(`.cart-item[data-product-id="${productId}"]`).remove();

            // Update total
            updateTotal();

            // Optionally, you can make an AJAX request to remove the item from the backend
        }
    });
}

// Example of how to use these functions
document.addEventListener('DOMContentLoaded', () => {
    // Attach event listeners to quantity buttons
    document.querySelectorAll('.qty-btn.plus').forEach(button => {
        button.addEventListener('click', (event) => {
            const productId = button.dataset.productId;
            const currentQuantity = button.dataset.currentQuantity;
            const price = button.dataset.price;
            const elementId = button.dataset.elementId;
            const maxQuantity = button.dataset.maxQuantity;
            changeQuantity(productId, currentQuantity, 1, price, elementId, maxQuantity);
        });
    });

    document.querySelectorAll('.qty-btn.minus').forEach(button => {
        button.addEventListener('click', (event) => {
            const productId = button.dataset.productId;
            const currentQuantity = button.dataset.currentQuantity;
            const price = button.dataset.price;
            const elementId = button.dataset.elementId;
            const maxQuantity = button.dataset.maxQuantity;
            changeQuantity(productId, currentQuantity, -1, price, elementId, maxQuantity);
        });
    });

    // Attach event listeners to remove buttons
    document.querySelectorAll('.remove-btn').forEach(button => {
        button.addEventListener('click', (event) => {
            const productId = button.dataset.productId;
            confirmRemove(productId);
        });
    });
});
