<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="Male_Fashion, unica, creative, html">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up / Sign In</title>
    
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,800" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <link rel="stylesheet" href="/css/signInUp.css" type="text/css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Header Styling */
        .header {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background-color: white;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
    
        .header__logo img {
            max-height: 60px; /* Adjust logo height */
        }
    
        .header__menu ul {
            list-style: none;
            display: flex;
            gap: 20px;
            margin: 0;
            padding: 0;
        }
    
        .header__menu ul li {
            display: inline-block;
        }
    
        .header__menu ul li a {
            text-decoration: none;
            color: #333;
            font-size: 16px;
            font-weight: 600;
            padding: 8px 12px;
            transition: 0.3s;
        }
    
        .header__menu ul li a:hover {
            color: #ff0000;
        }
    
        /* Buttons */
        .auth-buttons {
            display: flex;
            gap: 10px;
        }
    
        .auth-buttons a {
            padding: 8px 15px;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            transition: 0.3s;
        }
    
        .signup-btn {
            background-color: #1b1b1b;
        }
    
        .signup-btn:hover {
            background-color: #ff0000;
        }
    
        .login-btn {
            background-color: #121212;
        }
    
        .login-btn:hover {
            background-color: #ff0000;
        }
    
        /* Responsive */
        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                align-items: center;
            }
    
            .header__menu ul {
                flex-direction: column;
                text-align: center;
                gap: 10px;
            }
    
            .auth-buttons {
                margin-top: 10px;
            }
        }

        /* Error message styling */
        .error-message {
            color: #ff0000;
            font-size: 14px;
            margin-top: 5px;
        }

        .alert {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            font-size: 14px;
            width: 100%;
        }

        .alert-danger {
            background-color: #ffebee;
            color: #c62828;
            border: 1px solid #ffcdd2;
        }
    </style>
</head>

<body>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="/signin" method="post" id="signinForm" novalidate>
                <h1>Sign in</h1>
                <span>or use your account</span>
                
                <div id="signin-message" class="alert alert-danger" style="display: none;"></div>
                
                <div class="input-container">
                    <input type="email" placeholder="Email" name="email" id="signin-email" />
                    <div id="signin-email-error" class="error-message"></div>
                </div>
                <div class="input-container">
                    <input type="password" placeholder="Password" name="password" id="signin-password" />
                    <div id="signin-password-error" class="error-message"></div>
                </div>
                
                <a href="/forgotPassword">Forgot your password?</a>
                <button type="button" id="signinBtn">Sign In</button>
                <a href="/auth/google" class="gmail-btn"><i class="fab fa-google"></i> Sign in with Gmail</a>
                <a href="/" class="back-home-btn">Back to Home</a>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form id="signUpForm" action="/signup" method="post" novalidate>
                <h1>Create Account</h1>
                <span>or use your email for registration</span>
                
                <div id="signup-message" class="alert alert-danger" style="display: none;"></div>
                
                <div class="input-container">
                    <input type="text" id="fullName" placeholder="Full Name" name="name" />
                    <div id="error1" class="error-message"></div>
                </div>
                <div class="input-container">
                    <input type="email" id="email" placeholder="Email" name="email"/>
                    <div id="error2" class="error-message"></div>
                </div>
                <div class="input-container">
                    <input type="text" id="phone" placeholder="Phone Number" name="phone" />
                    <div id="error3" class="error-message"></div>
                </div>
                <div class="input-container">
                    <input type="password" id="password" placeholder="Password" name="password"/>
                    <div id="error4" class="error-message"></div>
                </div>
                <div class="input-container">
                    <input type="password" id="cPassword" placeholder="Confirm Password" name="cPassword" />
                    <div id="error5" class="error-message"></div>
                </div>
                <button type="button" id="submitBtn">Sign Up</button>
                <a href="/auth/google" class="gmail-btn"><i class="fab fa-google"></i> Sign up with Gmail</a>
                <a href="/" class="back-home-btn">Back to Home</a>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your details and start your journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected, please log in with your details</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Get URL parameters
            const urlParams = new URLSearchParams(window.location.search);
            const action = urlParams.get("action");
            const message = urlParams.get("message");
            const formType = urlParams.get("form");
            
            // Set the form based on action parameter
            if (action === "signup") {
                document.getElementById('container').classList.add("right-panel-active");
            } else {
                document.getElementById('container').classList.remove("right-panel-active");
            }
            
            // Show error message if present
            if (message) {
                const decodedMessage = decodeURIComponent(message);
                if (formType === "signin") {
                    const signinMessage = document.getElementById('signin-message');
                    signinMessage.textContent = decodedMessage;
                    signinMessage.style.display = "block";
                } else if (formType === "signup") {
                    const signupMessage = document.getElementById('signup-message');
                    signupMessage.textContent = decodedMessage;
                    signupMessage.style.display = "block";
                }
            }
        });

        // Panel switch buttons
        document.getElementById('signIn').addEventListener('click', () => {
            document.getElementById('container').classList.add("right-panel-active");
            window.history.pushState({}, "", "?action=signup");
        });

        document.getElementById('signUp').addEventListener('click', () => {
            document.getElementById('container').classList.remove("right-panel-active");
            window.history.pushState({}, "", "?action=login");
        });

        // Sign Up form validation and submission
        document.getElementById('submitBtn').addEventListener('click', function() {
            // Clear previous error messages
            document.querySelectorAll('.error-message').forEach(function(el) {
                el.textContent = '';
            });
            document.getElementById('signup-message').style.display = 'none';
            
            // Perform validation
            let isValid = true;
            const fullName = document.getElementById('fullName').value.trim();
            const email = document.getElementById('email').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const password = document.getElementById('password').value.trim();
            const cPassword = document.getElementById('cPassword').value.trim();
            
            // Name validation
            if (fullName === '') {
                document.getElementById('error1').textContent = 'Full Name is required.';
                isValid = false;
            } else if (!/^[A-Za-z\s]+$/.test(fullName)) {
                document.getElementById('error1').textContent = 'Name should contain only letters and spaces.';
                isValid = false;
            }
            
            // Email validation
            if (email === '') {
                document.getElementById('error2').textContent = 'Email is required.';
                isValid = false;
            } else if (!/\S+@\S+\.\S+/.test(email)) {
                document.getElementById('error2').textContent = 'Please enter a valid email.';
                isValid = false;
            }
            
            // Phone validation
            if (phone === '') {
                document.getElementById('error3').textContent = 'Phone Number is required.';
                isValid = false;
            } else if (!/^\d{10}$/.test(phone)) {
                document.getElementById('error3').textContent = 'Please enter a valid 10-digit phone number.';
                isValid = false;
            }
            
            // Password validation
            const passwordPattern = /^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*])[A-Za-z\d!@#$%^&*]{8,}$/;
            if (password === '') {
                document.getElementById('error4').textContent = 'Password is required.';
                isValid = false;
            } else if (!passwordPattern.test(password)) {
                document.getElementById('error4').textContent = 'Password must be at least 8 characters with one uppercase letter, one number, and one special character.';
                isValid = false;
            }
            
            // Confirm password validation
            if (cPassword === '') {
                document.getElementById('error5').textContent = 'Confirm Password is required.';
                isValid = false;
            } else if (password !== cPassword) {
                document.getElementById('error5').textContent = 'Passwords do not match.';
                isValid = false;
            }

            if (isValid) {
                // Show confirmation dialog
                Swal.fire({
                    title: 'Are you sure?',
                    text: "Do you want to proceed with the registration?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, submit it!',
                    cancelButtonText: 'No, cancel!',
                    customClass: {
                        confirmButton: 'btn btn-primary',
                        cancelButton: 'btn btn-outline-danger ml-1'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Submit the form if the user confirms
                        document.getElementById('signUpForm').submit();
                    }
                });
            // } else {
            //     // Show error message if validation fails
            //     Swal.fire({
            //         title: 'Error',
            //         text: 'Please correct the errors in the form.',
            //         icon: 'error',
            //         confirmButtonText: 'OK'
            //     });
            }
        });

        // Sign In form validation and submission
        document.getElementById('signinBtn').addEventListener('click', function() {
            // Clear previous error messages
            document.getElementById('signin-email-error').textContent = '';
            document.getElementById('signin-password-error').textContent = '';
            document.getElementById('signin-message').style.display = 'none';
            
            let isValid = true;
            const email = document.getElementById('signin-email').value.trim();
            const password = document.getElementById('signin-password').value.trim();
            
            // Email validation
            if (email === '') {
                document.getElementById('signin-email-error').textContent = 'Email is required.';
                isValid = false;
            } else if (!/\S+@\S+\.\S+/.test(email)) {
                document.getElementById('signin-email-error').textContent = 'Please enter a valid email.';
                isValid = false;
            }
            
            // Password validation
            if (password === '') {
                document.getElementById('signin-password-error').textContent = 'Password is required.';
                isValid = false;
            }
            
            if (isValid) {
                document.getElementById('signinForm').submit();
            }
        });
    </script>
</body>
</html>