    <style>
        /* General Styles */
body {
    background-color: #f4f4f4; /* Light grey background */
    color: #333;
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 20px;
}

.container {
    max-width: 1200px;
    margin: auto;
    padding: 20px;
    display: flex;
  flex-wrap: wrap; /* Prevents squeezing */
  align-items: center; /* Aligns text and images properly */
}

.text {
  flex: 1; /* Allows text to take available space */
  min-width: 200px; /* Prevents excessive shrinking */
}
/* Breadcrumbs */
.breadcrumbs {
    color: #333;
    font-size: 14px;
    margin-bottom: 15px;
}
.breadcrumbs a {
    color: #DB4437;
    text-decoration: none;
}

/* Product Details */
.product-details {
    display: flex;
    gap: 20px;
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.product-image img {
    width: 100%;
    border-radius: 8px;
    cursor: pointer;
    max-width: 100%; /* Ensures the image scales properly */
  height: auto;
}

.product-info h1 {
    color: #DB4437;
    font-size: 24px;
}

.product-info p {
    color: #555;
}
.grid-container {
  display: grid;
  grid-template-columns: 1fr auto; /* Prevents image squeezing */
  gap: 10px;
}




/* Price & Discount */
.price-container {
    margin: 15px 0;
}

.regular-price {
    color: #777;
    font-size: 16px;
    text-decoration: line-through;
}

.price {
    font-size: 22px;
    font-weight: bold;
    color: #FF4B2B;
    margin: 5px 0;
}

.discount {
    font-size: 16px;
    font-weight: normal;
    color: #FF4B2B;
    margin-left: 10px;
}

/* Stock & Rating */
.stock {
    font-size: 16px;
    font-weight: bold;
    color: #DB4437;
}

.rating {
    color: #FFCC00;
    font-size: 18px;
}

/* Buttons */
.btn {
    background: linear-gradient(45deg, #FF416C, #FF4B2B);
    color: #fff;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    margin-top: 10px;
    border-radius: 5px;
    font-size: 16px;
    transition: 0.3s;
}

.btn:hover {
    background: #DB4437;
}

/* Related Products */
.related-products-list {
    display: flex;
    gap: 20px;
    margin-top: 10px;
    flex-wrap: wrap;
}

.related-product {
    background: #fff;
    padding: 10px;
    border-radius: 8px;
    text-align: center;
    width: 200px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.related-product img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 5px;
    margin-bottom: 10px;
}

.related-product h4 {
    font-size: 14px;
    color: #DB4437;
    margin: 5px 0;
}

.related-product p {
    font-size: 14px;
    color: #555;
    margin: 0;
}

/* Image Zoom */
.image-container {
    position: relative;
    display: inline-block;
}

#cursorBox {
    width: 100px;
    height: 100px;
    border: 2px solid #DB4437;
    position: absolute;
    display: none;
    background: rgba(255, 255, 255, 0.3);
    pointer-events: none;
}

#zoomWindow {
    width: 500px;
    height: 500px;
    border: 2px solid #DB4437;
    position: absolute;
    left: 670px;
    top: 0;
    overflow: hidden;
    display: none;
    background-repeat: no-repeat;
    background-size: 900px;
}

/* Color Variants */
.color-variants {
    margin: 15px 0;
}

.color-options {
    display: flex;
    gap: 10px;
    margin-top: 5px;
}

.color-option {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    cursor: pointer;
    border: 2px solid #e0e0e0;
    transition: all 0.2s ease;
}

.color-option:hover {
    transform: scale(1.1);
}

.color-option.selected {
    border: 2px solid #DB4437;
}

/* Quantity Selector */
.quantity-selector {
    display: flex;
    align-items: center;
    margin: 15px 0;
}

.quantity-selector label {
    margin-right: 10px;
    font-weight: bold;
}

.quantity-controls {
    display: flex;
    align-items: center;
    border: 1px solid #DB4437;
    border-radius: 4px;
    overflow: hidden;
}

.quantity-btn {
    width: 30px;
    height: 30px;
    background: #FF4B2B;
    color: #fff;
    border: none;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
    transition: 0.3s;
}

.quantity-btn:hover {
    background: #DB4437;
}

#quantity {
    width: 50px;
    height: 30px;
    text-align: center;
    border: none;
    border-left: 1px solid #DB4437;
    border-right: 1px solid #DB4437;
    font-size: 16px;
}

/* Removing Number Input Arrows */
#quantity::-webkit-inner-spin-button, 
#quantity::-webkit-outer-spin-button { 
    -webkit-appearance: none;
    margin: 0;
}

